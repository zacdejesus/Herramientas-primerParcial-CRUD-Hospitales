@model parcial1_hospitales.Models.Patient

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle del paciente</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Edad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
</div>
<div>
   <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@Model?.Id">Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver</a>
</div>
