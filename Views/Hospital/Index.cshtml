@model parcial1_hospitales.ViewModels.HospitalViewModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f9fc;
            margin: 0;
            
        }

        h1 {
            color: #2779bd;
            margin-bottom: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        input[type="text"],
        input[type="checkbox"],
        button {
            padding: 8px;
            font-size: 14px;
            border-radius: 4px;
            border: 1px solid #b6d4f2;
            margin-bottom: 10px;
            background-color: #fff;
        }

        label {
            margin-right: 10px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            background-color: #fff;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #dcecff;
        }

        th {
          
            font-weight: bold;
            color: #2779bd;
        }

        a {
            text-decoration: none;
            color: #2779bd;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Hospitales Registrados</h1>

    <form method="get" asp-action="Index">
        <label for="checkbox">Buscar por nombre o direccion:</label>
        <input asp-for="filter" />
        <br>
        <button type="submit">Buscar</button>
    </form>

    <p>
        <a asp-action="Create">Agrega un hospital</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Doctores
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.hospitals) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @foreach (var item2 in item.Doctors) {
                            @Html.DisplayFor(modelItem => item2.Name)
                            <br/>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>