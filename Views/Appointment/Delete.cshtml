@model parcial1_hospitales.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f9fc;
            margin: 0;
        }

        h1 {
            color: #2779bd;
            margin-bottom: 20px;
        }
 

        h1 {
            color: #2779bd;
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        dl {
            margin-bottom: 20px;
        }

        dt {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        dd {
            color: #555;
            margin-bottom: 10px;
        }

        input[type="submit"] {
            background-color: #dc3545;
            color: #fff;
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #c82333;
        }

        p {
            margin-bottom: 10px;
        }

        a {
            text-decoration: none;
            color: #2779bd;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>


    <h3>Seguro que la quieres borrar?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Id)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver</a>
        </form>
    </div>
</body>
</html>