@model parcial1_hospitales.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f9fc;
            margin: 0;
            padding: 20px;
        }

   

        .details-section {
            margin-bottom: 20px;
        }

        .details-section h2 {
            font-size: 1.2em;
            color: #333;
            margin-bottom: 10px;
        }

        .details-section p {
            margin: 0;
            color: #555;
        }

        .actions-section {
            margin-top: 20px;
        }

        .actions-section a {
            display: inline-block;
            margin-right: 10px;
            text-decoration: none;
            
        }

        .actions-section a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Detalles de la cita</h1>

    <div class="details-section">
        <h2>Description</h2>
        <p>@Html.DisplayFor(model => model.Description)</p>
    </div>

    <div class="details-section">
        <h2>Doctor</h2>
        <p>@Html.DisplayFor(model => model.Doctor.Name)</p>
    </div>

    <div class="details-section">
        <h2>Paciente</h2>
        <p>@Html.DisplayFor(model => model.Patient.Name)</p>
    </div>

    <div class="actions-section">
        <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@Model?.Id">Editar</a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Volver</a>
    </div>
</body>
</html>
