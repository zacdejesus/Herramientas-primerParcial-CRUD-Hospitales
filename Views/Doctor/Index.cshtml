@using parcial1_hospitales.ViewModels
@model DoctorViewModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f9fc;
            margin: 0;
        }

        h1 {
            color: #2779bd;
            margin-bottom: 20px;
        }

        input[type="text"],
        input[type="checkbox"],
        button {
            padding: 8px;
            font-size: 14px;
            border-radius: 4px;
            border: 1px solid #b6d4f2;
            margin-bottom: 10px;
            background-color: #fff;
        }

        label {
            margin-right: 10px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            background-color: #fff;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #dcecff;
        }

        th {
            background-color: #e7f1fd;
            font-weight: bold;
            color: #2779bd;
        }

        a {
            text-decoration: none;
            color: #2779bd;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Doctores disponiles</h1>

    <form method="get" asp-action="Index">
        <input asp-for="filter" type="text">
        <br>
        <label for="checkbox">Buscar por disponibles:</label>
        <input asp-for="isAvailable" type="checkbox">
        <br>
        <button type="submit">Buscar</button>
    </form>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.doctors[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.doctors[0].Age)</th>
                <th>@Html.DisplayNameFor(model => model.doctors[0].IsAvailable)</th>
                <th>@Html.DisplayNameFor(model => model.doctors[0].Specialty)</th>
                <th>@Html.DisplayNameFor(model => model.doctors[0].Hospital)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.doctors)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hospital.Id)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
